#!/bin/bash

printUsage()
{
    containedOrAddOrUpdateLine --help 2>&1 | sed \
	-e '1s#^.*$#If the passed PATTERN does not match in at least one (all with --all) of the passed FILE(s), asks the user whether to update with REPLACEMENT (once, in the first to match).#' \
	-e '2b removeFirstParagraphLoop' \
	-e '/0	An update has happened/a\
    1	PATTERN does not match, no modifications can be made.' \
	-e '/^Usage:$/N' -e '/\(^\|\n\)Usage: */{ s/\(^\|\n\)\(Usage: *\)\?\([^ ]\+ \)*containedOrAddOrUpdateLine /\1\2'"$(basename "$1")"' /; s/|--create-nonexisting//; s/-l|--line LINE//; s/\[-u|--update-match PATTERN\] \[-r|--replacement REPLACEMENT\]/-u|--update-match PATTERN -r|--replacement REPLACEMENT/; s/\[--pre-line PRETEXT \[--pre-line \.\.\.\]\] \[--post-line POSTTEXT \[--post-line \.\.\.\]\] //; }' \
	-e '/^Example:$/N' -e '/\(^\|\n\)Example: */{ s/\(^\|\n\)\(Example: *\)\?containedOrAddOrUpdateLine .*/\1\2'"$(basename "$1") --update-match '^\\\\(root:.*:\\\\)\\/bin\\/bash\$' --replacement '\\\\1\\/bin\\/dash' \/etc\/passwd/; }" \
	-e b -e :removeFirstParagraphLoop -e '{ /\(^\|\n\)$/{ s/^\(.*\n\)\?//; b; }; N; b removeFirstParagraphLoop }'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

ADDORUPDATELINE_NO_APPEND=t exec containedOrAddOrUpdateLine "$@"
