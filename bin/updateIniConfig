#!/bin/bash

printUsage()
{
    addOrUpdateIniConfig --help 2>&1 | sed \
	-e '1s#^.*$#Updates a configuration in the form KEY=... under section [SECTION] (once, in\nthe first file to match, or in all with --all (but still just the first matching\nconfig line in each)) of the passed FILE(s) so that VALUE gets assigned.#' \
	-e '2b removeFirstParagraphLoop' \
	-e '/1	No modifications were made/{ N; s/.*/    1	No such SECTION \/ KEY, no modifications were made./; }' \
	-e '/^ *\(--create-nonexisting\|--pre-line\|--post-line\)/b removeOptionLoop' \
	-e '/^Usage:$/N' -e '/\(^\|\n\)Usage: */{ s/\(^\|\n\)\(Usage: *\)\?\([^ ]\+ \)*addOrUpdateIniConfig /\1\2'"$(basename "$1")"' /; s/|--create-nonexisting//; s/\[--pre-line PRETEXT \[--pre-line \.\.\.\]\] \[--post-line POSTTEXT \[--post-line \.\.\.\]\] //; }' \
	-e '/^Example:$/N' -e '/\(^\|\n\)Example: */{ s/\(^\|\n\)\(Example: *\)\?addOrUpdateIniConfig .*/\1\2'"$(basename "$1") -l 'export FOO' -r quux .bashrc/; }" \
	-e b -e :removeFirstParagraphLoop -e '{ /\(^\|\n\)$/{ s/^\(.*\n\)\?//; b; }; N; b removeFirstParagraphLoop }' \
	-e b -e :removeOptionLoop -e '{ /\n *\(--create-nonexisting\|--pre-line\|--post-line\)[^\n]*$/{ N; b removeOptionLoop; }; /\n *--[^\n]*$\|\n[^	 ]\|\n$/{ s/^\(.*\n\)\?//; b; }; N; b removeOptionLoop }'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

ADDORUPDATELINE_NO_APPEND=t exec addOrUpdateIniConfig "$@"
