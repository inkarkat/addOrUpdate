#!/bin/bash

ADDORUPDATEASSIGNMENT_DESCRIPTION='If an assignment in the form ASSIGNEE=... does not exist in at least one (all\nwith --all) of the passed FILE(s), asks the user whether to update it so that\nVALUE gets assigned (in the first file to match, and only the first such\nmatching assignment there), or append (at the end of the last FILE).' \
ADDORUPDATELINE=containedOrAddOrUpdateLine \
exec addOrUpdateAssignment "$@"
