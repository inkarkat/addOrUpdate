#!/bin/bash

printUsage()
{
    addOrUpdateLine --help 2>&1 | sed \
	-e '1s#^.*$#Updates the first line that matches PATTERN (once, in the first file to match, or in all with --all (but still just the first match in each)) in the passed FILE(s) with REPLACEMENT.#' \
	-e '2b removeFirstParagraphLoop' \
	-e 's/The LINE already existed, no modifications were made\./PATTERN does not match, or the REPLACEMENT is already there,\n	no modifications were made./' \
	-e '/^ *\(--create-nonexisting\|--line\|--pre-line\|--post-line\)/b removeOptionLoop' \
	-e '/^Usage:$/N' -e '/\(^\|\n\)Usage: */{ s/\(^\|\n\)\(Usage: *\)\?\([^ ]\+ \)*addOrUpdateLine /\1\2'"$(basename "$1")"' /; s/|--create-nonexisting//; s/-l|--line LINE//; s/\[-u|--update-match PATTERN\] \[-r|--replacement REPLACEMENT\]/-u|--update-match PATTERN -r|--replacement REPLACEMENT/; s/\[--pre-line PRETEXT \[--pre-line \.\.\.\]\] \[--post-line POSTTEXT \[--post-line \.\.\.\]\] //; }' \
	-e '/^Example:$/N' -e '/\(^\|\n\)Example: */{ s/\(^\|\n\)\(Example: *\)\?addOrUpdateLine .*/\1\2'"$(basename "$1") --update-match '^\\\\(root:.*:\\\\)\\/bin\\/bash\$' --replacement '\\\\1\\/bin\\/dash' \/etc\/passwd/; }" \
	-e b -e :removeFirstParagraphLoop -e '{ /\(^\|\n\)$/{ s/^\(.*\n\)\?//; b; }; N; b removeFirstParagraphLoop }' \
	-e b -e :removeOptionLoop -e '{ /\n *\(--create-nonexisting\|--line\|--pre-line\|--post-line\)[^\n]*$/{ N; b removeOptionLoop; }; /\n *--[^\n]*$\|\n[^ ]\|\n$/{ s/^\(.*\n\)\?//; b; }; N; b removeOptionLoop }'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

ADDORUPDATELINE_NO_APPEND=t exec addOrUpdateLine "$@"
