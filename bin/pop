#!/bin/sh

printUsage()
{
    cat <<HELPTEXT
Remove the first line from (the first non-empty) FILE and output it.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" 'FILE [...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -eq 0 ]; then
    printUsage "$0" >&2
    exit 2
fi

for filespec
do
    if [ -s "$filespec" ]; then
	sed -i -e '1w /dev/stdout' -e 1d -- "$filespec"
	exit $?
    fi
done
exit 1
