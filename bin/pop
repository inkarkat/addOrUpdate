#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Remove the first line from (the first non-empty) FILE and output it.
With -d|--delete, an emptied file is removed from the file system as well.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-d|--delete] FILE [...] [-?|-h|--help]'
}
isDelete=
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --delete|-d)	shift; isDelete=t;;
esac
if [ $# -eq 0 ]; then
    printUsage "$0" >&2
    exit 2
fi

for filespec
do
    if [ -s "$filespec" ]; then
	sed -i -e '1w /dev/stdout' -e 1d -- "$filespec"
	status=$?

	if [ "$isDelete" ] && [ -r "$filespec" -a ! -s "$filespec" ]; then
	    rm -- "$filespec"
	fi

	exit $status
    fi
done
exit 1
