#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Capture output from stdin into a temp file whose name is then printed.
Additionally, statistics about the amount of captured text is printed to stderr.
HELPTEXT
    printf 'Usage: cat FILE [...] | %q %s\n' "$(basename "$1")" '[--basename BASE] [--extension EXT] [-?|-h|--help]'
}

basename=
extension=
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--basename)	shift; basename="$1"; shift;;
	--extension)	shift; extension="$1"; shift;;
	*)		{ echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
    esac
done
[ "$basename" ] || basename="$(basename -- "$0")"

readonly TMPFILE=$(mktemp --tmpdir "${basename}-XXXXXX${extension:+.}${extension}" 2>/dev/null || echo "${TEMP:-/tmp}/${basename}.$$${RANDOM}${extension:+.}${extension}")

cat > "$TMPFILE"
read lineCnt wordCnt byteCnt _ < <(wc -- "$TMPFILE")
lineCntPlural=s; [ $lineCnt -eq 1 ] && lineCntPlural=
wordCntPlural=s; [ $wordCnt -eq 1 ] && wordCntPlural=
byteCntPlural=s; [ $byteCnt -eq 1 ] && byteCntPlural=

printf >&2 '%d line%s, %d word%s, %d byte%s read\n' "$lineCnt" "$lineCntPlural" "$wordCnt" "$wordCntPlural" "$byteCnt" "$byteCntPlural"
printf '%s\n' "$TMPFILE"
