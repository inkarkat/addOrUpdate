#!/bin/bash
shopt -qs extglob

: ${BAG:="${HOME}/.bag"}

printUsage()
{
    cat <<HELPTEXT
Collect output in a special file.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-t|--transactional] [-a|--append] [--] [OUTPUT ...]'
    printf 'Usage: echo OUTPUT | %q %s\n' "$(basename "$1")" '[-t|--transactional] [-a|--append]'

    echo
    cat <<HELPTEXT
Print collected output from the special file.
HELPTEXT
    echo
    printf 'Usage: %q %s [| ...]\n' "$(basename "$1")" '[-t|--transactional] [-p|--print] [-q|--quiet]'

    echo
    cat <<HELPTEXT
Print and remove the first / N line(s) (or fewer) from the collected output from
the special file.
With --delete-empty, an emptied bag is removed from the file system as well.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-t|--transactional] --pop [-<N>|-n|--lines N] [--delete-empty] [-q|--quiet]'

    echo
    cat <<HELPTEXT
Remove all collected output from the special file.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-t|--transactional] [-p|--print] -d|--delete'
}

typeset -a allArgs=("$@")
typeset -a popArgs=()
typeset -a teeArgs=()
isQuiet=
isAppend=
isPrint=
isTransactional=
action=collect; [ -t 0 ] && action=print
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--quiet|-q)	shift; isQuiet=t;;
	--print|-p)	shift; isPrint=t;;
	--pop)		shift; action=pop;;
	--lines|-n)	popArgs+=("$1" "$2"); shift; shift;;
	-+([0-9]))	popArgs+=("$1"); shift;;
	--delete-empty)	shift; popArgs+=(--delete);;
	--delete|-d)	shift; action=delete;;
	--append|-a)	isAppend=t; teeArgs+=("$1"); shift;;
	--transactional|-t)
			isTransactional=t; shift;;
	--)		shift; break;;
	-*)		{ echo "ERROR: Unknown option \"$1\"!"; echo; printUsage "$0"; } >&2; exit 2;;
	*)		break;;
    esac
done
if [ "$isPrint" ]; then
    case "$action" in
	collect)    action=print;;
	print|delete)
		    ;;
	*)	    printUsage "$0" >&2; exit 2;;
    esac
fi
if [ $# -gt 0 ]; then
    case "$action" in
	collect)    action=put;;
	print)	    if [ "$isPrint" ]; then
			printUsage "$0" >&2
			exit 2
		    else
			action=put
		    fi
		    ;;
	*)	    printUsage "$0" >&2
		    exit 2
		    ;;
    esac
fi

if [ "$isTransactional" ]; then
    typeset -a withTransactionArgs=()
    [ "$action" = print ] && withTransactionArgs+=(--read-only)
    readonly scriptFilespec="${BASH_SOURCE[0]}"

    exec withTransaction \
	--drop-argument --transactional --drop-argument -t "${withTransactionArgs[@]}" \
	--transacted-file "$BAG" \
	-- "$scriptFilespec" "${allArgs[@]}"
fi

assertExistingBag()
{
    if [ ! -f "$BAG" ]; then
	[ "$isQuiet" ] || printf >&2 '%s does not exist\n' "$BAG"
	exit 1
    fi
}

case "$action" in
    print)
	assertExistingBag
	exec cat -- "$BAG"
	;;
    pop)
	assertExistingBag
	exec pop "${popArgs[@]}" -- "$BAG"
	;;
    delete)
	[ "$isPrint" ] && [ -f "$BAG" ] && cat -- "$BAG"
	exec rm --force -- "$BAG"
	;;
    put)
	eval 'printf %s\\n "$*"' ">${isAppend:+>}" '"$BAG"'
	;;
    collect)
	exec tee "${teeArgs[@]}" -- "$BAG"
	;;
    *)
	printf >&2 'ASSERT: Invalid action: %s\n' "$action"; exit 3
	;;
esac
