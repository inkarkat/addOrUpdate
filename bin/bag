#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Collect output in a special file.
HELPTEXT
    echo
    printf 'Usage: echo OUTPUT | %q %s\n' "$(basename "$1")" '[-a|--append]'

    echo
    cat <<HELPTEXT
Print collected output from the special file.
HELPTEXT
    echo
    printf 'Usage: %q %s [| ...]\n' "$(basename "$1")" '[-a|--append]'

    echo
    cat <<HELPTEXT
Remove all collected output from the special file.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '-d|--delete [-?|-h|--help]'
}

BAG="$HOME/.bag"

action=
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --delete|-d)	shift; action=delete;;
esac


if [ "$action" = delete ]; then
    exec rm --force -- "$BAG"
fi

if [ -t 0 ]; then
    if [ ! -f "$BAG" ]; then
	printf >&2 '%s does not exist\n' "$BAG"
	exit 1
    fi
    cat "$BAG"
else
    tee "$@" "$BAG"
fi
