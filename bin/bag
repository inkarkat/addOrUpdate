#!/bin/sh

printUsage()
{
    cat <<HELPTEXT
Collect output in a file.
Usage: "$(basename "$1")" [-a|--append|-d|--delete] [-?|-h|--help]
HELPTEXT
}

BAG="$HOME/.bag"

case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --delete|-d)	shift; rm "$BAG"; exit $?;;
esac

if [ -t 0 ]; then
    if [ ! -f "$BAG" ]; then
	echo >&2 "$BAG does not exist"
	exit 1
    fi
    cat "$BAG"
else
    tee "$@" "$BAG"
fi
