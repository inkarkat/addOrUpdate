#!/bin/bash
shopt -qs extglob

printUsage()
{
    cat <<HELPTEXT
Collect output in a special file.
HELPTEXT
    echo
    printf 'Usage: echo OUTPUT | %q %s\n' "$(basename "$1")" '[-a|--append]'

    echo
    cat <<HELPTEXT
Print collected output from the special file.
HELPTEXT
    echo
    printf 'Usage: %q %s [| ...]\n' "$(basename "$1")" '[-a|--append]'

    echo
    cat <<HELPTEXT
Print and remove the first / N line(s) (or fewer) from the collected output from
the special file.
With --delete-empty, an emptied bag is removed from the file system as well.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '--pop [-<N>|-n|--lines N] [--delete-empty]'

    echo
    cat <<HELPTEXT
Remove all collected output from the special file.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-p|--print] -d|--delete'
}

BAG="$HOME/.bag"

typeset -a popArgs=()
isPrint=
action=
while [ $# -ne 0 ]
do
    case "$1" in
	--help|-h|-\?)	shift; printUsage "$0"; exit 0;;
	--print|-p)	shift; isPrint=t;;
	--pop)		shift; action=pop;;
	--lines|-n)	popArgs+=("$1" "$2"); shift; shift;;
	-+([0-9]))	popArgs+=("$1"); shift;;
	--delete-empty)	shift; popArgs+=(--delete);;
	--delete|-d)	shift; action=delete;;
    esac
done

assertExistingBag()
{
    if [ ! -f "$BAG" ]; then
	printf >&2 '%s does not exist\n' "$BAG"
	exit 1
    fi
}

case "$action" in
    pop)
	assertExistingBag
	exec pop "${popArgs[@]}" -- "$BAG"
	;;
    delete)
	[ "$isPrint" ] && [ -f "$BAG" ] && cat -- "$BAG"
	exec rm --force -- "$BAG"
	;;
esac

if [ -t 0 ]; then
    assertExistingBag
    cat -- "$BAG"
else
    tee "$@" -- "$BAG"
fi
