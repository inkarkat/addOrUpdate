#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Collect output in a file.
HELPTEXT
    printf 'Usage: %q %s\n' "$(basename "$1")" '[-a|--append|-d|--delete] [-?|-h|--help]'
}

BAG="$HOME/.bag"

case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
    --delete|-d)	shift; exec rm --force -- "$BAG";;
esac

if [ -t 0 ]; then
    if [ ! -f "$BAG" ]; then
	printf >&2 '%s does not exist\n' "$BAG"
	exit 1
    fi
    cat "$BAG"
else
    tee "$@" "$BAG"
fi
